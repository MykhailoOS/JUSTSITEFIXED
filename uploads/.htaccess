# Prevent execution of PHP files in uploads directory
<Files "*.php">
    Order Deny,Allow
    Deny from all
</Files>

# Allow only image files
<FilesMatch "\.(jpg|jpeg|png|gif|webp)$">
    Order Allow,Deny
    Allow from all
</FilesMatch>

# Deny everything else
<FilesMatch "^(?!.*\.(jpg|jpeg|png|gif|webp)$).*">
    Order Deny,Allow
    Deny from all
</FilesMatch>
